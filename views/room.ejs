<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <script
      src="https://kit.fontawesome.com/309cb5bc87.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="../public/stylesheets/style.css" />
  </head>
  <body>
    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Incoming Video Call....</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body" id="modal_caller_id"></div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-danger"
              data-bs-dismiss="modal"
            >
              Decline
            </button>
            <button
              type="button"
              data-bs-dismiss="modal"
              class="btn btn-success"
              id="answercall"
            >
              Answer
            </button>
          </div>
        </div>
      </div>
    </div>

    <h1 align="center">Video Chat App</h1>
    <p id="selfid" hidden></p>
    <br />
    <br />
    <div id="othervideobox">
      <video id="othervideo" width="700px" autoplay></video>
    </div>
    <div id="selfvideobox">
      <form class="d-flex">
        <h4>Copy self ID</h4>
        &emsp;
        <a id="copyid" class="btn btn-warning">
          <i class="fa-solid fa-copy"></i>
        </a>
      </form>
      <br />
      <div id="caller">
        <form class="d-flex">
          <input
            type="text"
            id="idtocall"
            class="form-control"
            placeholder="Caller ID..."
          />&emsp;
          <a id="call" class="btn btn-success">
            <i class="fa-solid fa-phone"></i>
          </a>&emsp;
          <a id="callhang" class="btn btn-danger" hidden>
            <i class="fas fa-phone-slash"></i>
          </a>
        </form>
      </div>
      <br />
      <br />
      <br />
      <div>
        <video id="selfvideo" width="300px" autoplay muted></video>
      </div>
      <br />
      <div align="center">
        <button class="btn btn-danger" id="vidtoggle">
          <i class="fa-solid fa-video-slash"></i>
        </button>

        <button class="btn btn-primary" id="mictoggle">
          <i class="fa-solid fa-microphone"></i>
        </button>
      </div>
    </div>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"
  ></script>
  <script
    defer
    src="https://unpkg.com/peerjs@1.2.0/dist/peerjs.min.js"
  ></script>
  <script src="../public/javascripts/index.js" defer></script>
</html>
